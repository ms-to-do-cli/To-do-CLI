{
    "env": {
        "browser": false,
        "es6": true
    },
    "extends": [
        "oclif",
        "oclif-typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "simple-import-sort"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-warning-comments": "off",
        "max-params": "off",
        "max-nested-callbacks": "off",
        "simple-import-sort/imports": "error",
        "simple-import-sort/exports": "error"
    }
}
